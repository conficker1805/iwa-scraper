.container
  .row
    - if @posts.present?
      - @posts.each do |post|
        .col-md-3
          .post-box
            .cover
              = link_to root_path
                - if post.cover
                  = image_tag(post.cover, alt: post.title)
                - else
                  .no-image
                    .loader
                .ranking
                  = post.point
            .title
              = link_to post.title, root_path
            .info
              .author
                = "#{post.author} posted #{post.posted_at}"
              .line
                .site
                  | FromÂ 
                  = link_to post.site, post.site
    - else
      p.no-post No post found
